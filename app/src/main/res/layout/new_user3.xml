<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#45608C"
    tools:context="View.NewUser3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/arrow_back"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="34dp"
                    android:background="@drawable/baseline_arrow_back_white" />



                <View
                    android:layout_width="0dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="17" />


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="30dp"
                android:text="City of Residence "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp"
                android:background="@drawable/blue_edittext_background"
                android:inputType="text"
                android:textSize="16sp"
                android:paddingStart="15dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:text="Relationship to child"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp"
                android:paddingStart="10dp"
                android:background="@drawable/blue_edittext_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_relationship"
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:text="Password "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#3A3B47"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:paddingStart="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_edittext_background"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:text="Confirm Password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#3A3B47"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_edittext_background"/>

            </com.google.android.material.textfield.TextInputLayout>



               <CheckBox
                        android:id="@+id/check_box"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="33dp"
                        android:layout_marginStart="65dp"
                        android:text="I agree to our times and condition."
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_height="35dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit_details"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/white_button_background"
                android:gravity="center"
                android:text="Submit"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>