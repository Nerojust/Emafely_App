<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer=""
    tools:context="View.MainPage2">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        android:background="#BBB6B6"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tool_bar"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="we"
            app:titleTextColor="@color/white"
            android:background="@color/white"/>

    </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Announcement>>"
                    android:textColor="#FF6969"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Students resumption date has been..."
                    android:textColor="#525252"
                    android:textSize="12sp" />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorEnabled="true"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="5dp"
                    app:sliderIndicatorRadius="3dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1" />



            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#3B3F4B"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Explore a world"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="of possibilities"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="262dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#4F6D99" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/web_design" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emafely is an International Private School, fully accredited by all necessary National and International agencies. We run both Nigeria and British Curriculum, and are well known for academic excellence and moral discipline."
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:textSize="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="45dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/web_design" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emafely is an International Private School, fully accredited by all necessary National and International agencies. We run both Nigeria and British Curriculum, and are well known for academic excellence and moral discipline."
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:textSize="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="55dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/web_design" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emafely is an International Private School, fully accredited by all necessary National and International agencies. We run both Nigeria and British Curriculum, and are well known for academic excellence and moral discipline."
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:textSize="5sp" />

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="13dp" />


            <LinearLayout
                android:id="@+id/layout_youtube1"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@drawable/main_student_1">

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="37dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/youtube">

                    <View
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/angle"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_youtube2"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/main_student_2">

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="37dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/youtube">

                    <View
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/angle"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_youtube3"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:background="@drawable/main_student_3">

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="37dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/youtube">

                    <View
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/angle"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="#304E7C">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Enrol Your Child Today"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="We welcome your child to join us for an enriching and enjoyable learning."
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />

              <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/btn_enrol_now"
                  android:layout_width="85dp"
                  android:layout_height="48dp"
                  android:background="@drawable/rectangle_button"
                  android:text="Enrol Now"
                  android:gravity="center"
                  android:textSize="12sp"
                  android:layout_marginEnd="40dp"
                  android:textAllCaps="false"
                  android:textColor="@color/white"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_log_in"
                    android:layout_width="85dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rectangle_button"
                    android:text="Login"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="262dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#4F6D99" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Copyright 2023 | All Rights Reserved"
                android:textColor="#000000"
                android:textSize="7sp" />

        </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>