<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#45608C"
    tools:context="View.NewUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/arrow_back"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="34dp"
                    android:background="@drawable/baseline_arrow_back_white" />



                <View
                    android:layout_width="0dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="17" />



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Emafely Divine "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Treasure School "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="30dp"
                android:text="Parent/Guardian name  "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_parent_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp"
                android:background="@drawable/blue_edittext_background"
                android:inputType="text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:text="Username"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp"
                android:background="@drawable/blue_edittext_background"
                android:inputType="text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:text="Email Address"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_email_address"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp"
                android:background="@drawable/blue_edittext_background"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:text="Name of Child"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_child_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="37dp"
                android:background="@drawable/blue_edittext_background"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:textColor="@color/white" />



           <LinearLayout
               android:id="@+id/linear_layout_next"
               android:layout_width="130dp"
               android:layout_height="55dp"
               android:layout_gravity="end"
               android:layout_marginEnd="37dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/white_button_background"
               android:orientation="vertical">

               <View
                   android:layout_width="35dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:background="@drawable/arrow_group" />

           </LinearLayout>

            <View
                android:layout_width="35dp"
                android:layout_height="80dp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>